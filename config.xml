<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kwipi.processing_free" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AnEditorForProcessing</name>
    <description>
      An app to execute and store Processing sketches
    </description>
    <author email="dev@kwipi.org" href="http://kwipi.org">
      Kwipi
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
      <icon src="res/android/ldpi/icon.png" density="ldpi" />
      <icon src="res/android/mdpi/icon.png" density="mdpi" />
      <icon src="res/android/hdpi/icon.png" density="hdpi" />
      <icon src="res/android/xhdpi/icon.png" density="xhdpi" />
      <icon src="res/android/xxhdpi/icon.png" density="xxhdpi" />
      <icon src="res/android/xxxhdpi/icon.png" density="xxxhdpi" />
      <splash src="res/android/ldpi/splash-land.png" density="land-ldpi" />
      <splash src="res/android/mdpi/splash-land.png" density="land-mdpi" />
      <splash src="res/android/hdpi/splash-land.png" density="land-hdpi" />
      <splash src="res/android/xhdpi/splash-land.png" density="land-xhdpi" />
      <splash src="res/android/ldpi/splash-port.png" density="port-ldpi" />
      <splash src="res/android/mdpi/splash-port.png" density="port-mdpi" />
      <splash src="res/android/hdpi/splash-port.png" density="port-hdpi" />
      <splash src="res/android/xhdpi/splash-port.png" density="port-xhdpi" />
    </platform>
    <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
    </platform>
</widget>
